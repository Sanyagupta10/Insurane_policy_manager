<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @comment, :url => comments_path(:id => @p_id), local: true) do |f| %>
      <%= f.label :body, "Comment" %>
      <%= f.text_area :body, :cols => "10", :rows => "5", class: 'form-control' %>
      <%= f.hidden_field :user_id, :value => @user.id, :class => "form-control", :readonly => true %>
      <%= f.hidden_field :policy_id, :value => @pol_id, :class => "form-control", :readonly => true %>
      <%= f.submit "Submit" , class: "btn btn-primary custom_btn_small"%>
    <% end %>
  </div>
</div>