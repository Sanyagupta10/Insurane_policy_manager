<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_with(model: @company, local: true) do |f| %>
			<%= render 'shared/company_errors' %>
			<%= f.label :name %>
			<%= f.text_field :name, class: 'form-control' %>
			<%= f.label :description %>
			<%= f.text_area :description, :cols => "10", :rows => "5", class: 'form-control' %>          
			<%= f.submit "Submit", class: "btn btn-primary custom_btn_small" %>
		<% end %>
	</div>
</div>
